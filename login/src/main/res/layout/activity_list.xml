<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fafafa"
        >

    <RelativeLayout android:layout_width="match_parent"
                    android:background="#99c8cc"
                    android:layout_height="60dp">
        <ImageView android:layout_width="wrap_content"
                   android:src="@drawable/zuo1"
                   android:layout_marginLeft="@dimen/dp10"
                   android:layout_centerVertical="true"
                   android:layout_height="25dp"/>
        <TextView android:layout_width="wrap_content"
                  android:text="设置上课时间"
                  android:gravity="center"
                  android:textColor="#ffffff"
                  android:textSize="18sp"
                  android:layout_height="match_parent"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"/>

        <ImageView
                android:id="@+id/titlt_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/save"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <ListView android:layout_width="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:id="@+id/list_item"
              android:divider="#00000000"
              android:dividerHeight="@dimen/dp5"
              android:layout_height="495dp"
              android:layout_weight="0.89"></ListView>

    <RelativeLayout android:layout_width="match_parent"
                     android:layout_height="80dp">

    <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <TextView android:layout_width="70dp"
              android:layout_height="@dimen/dp50"
              android:id="@+id/text2"
              android:gravity="center"
              android:textColor="#ffffff"
              android:text="@string/busy"
              android:layout_marginLeft="@dimen/dp5"
              android:background="@drawable/hape2"
              android:layout_alignParentTop="true" android:layout_toStartOf="@+id/textView"/>
       <TextView android:layout_width="wrap_content"
                 android:layout_height="@dimen/dp50"
                 android:gravity="center"
                 android:text="拒绝上课安排"
                 android:textColor="#000"

                 android:id="@+id/textView"
                 android:layout_marginEnd="129dp" android:layout_alignParentTop="true"
                 android:layout_alignParentEnd="true"/>
      <TextView android:layout_width="70dp"
                android:layout_height="@dimen/dp50"
                android:gravity="center"
                android:textColor="#ffffff"
                android:text="空闲"
                android:background="@drawable/hape3"
                android:id="@+id/textView3"
                android:layout_alignParentTop="true" android:layout_toStartOf="@+id/textView2"/>
      <TextView android:layout_width="wrap_content"
                android:layout_height="@dimen/dp50"
                android:gravity="center"
                android:text="接受安排上课"
                android:textColor="#000"
                android:layout_marginLeft="@dimen/dp5"
                android:id="@+id/textView2"
                android:layout_marginEnd="52dp"
                android:layout_alignParentTop="true" android:layout_toStartOf="@+id/text2"/>
   </RelativeLayout>

   </RelativeLayout>
</LinearLayout>
