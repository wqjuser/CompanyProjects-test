<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.example.tu4.activity.SubjectDetailActivity">
    <LinearLayout
            android:background="@color/color_f0f0f0"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/s97c8cd"
                android:layout_height="@dimen/dp44">
            <ImageView
                    android:layout_width="wrap_content"
                    android:src="@mipmap/left_arrow_white"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_height="match_parent"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/subjectdetail"
                    android:gravity="center"
                    android:textColor="@color/sffffff"
                    android:textSize="@dimen/px34"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"/>
            <ImageView
                    android:id="@+id/imageview_instrument_show"
                    android:layout_width="@dimen/dp20"
                    android:layout_height="@dimen/dp15"
                    android:src="@mipmap/subjectdetail_more"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/dp10"
            />
        </RelativeLayout>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:src="@mipmap/instrument_instrument"/>

        <RelativeLayout
                android:background="@drawable/subject_detail_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--课程XXXXX-->
            <TextView
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="课程XXXXXXX"
                    android:textSize="@dimen/sp15"
                    android:textColor="@color/color_333333"
                    android:layout_marginTop="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp10"/>
            <!--等级XXX-->
            <TextView
                    android:id="@+id/tv_course_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="等级 ：XXXXXX"
                    android:textSize="@dimen/sp12"
                    android:layout_below="@+id/tv_course_name"
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_alignLeft="@+id/tv_course_name"
                    android:layout_marginBottom="@dimen/dp15"/>
            <!--5000.00-->
            <TextView
                    android:id="@+id/tv_money_subjectdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp30"
                    android:text="5000.00"
                    android:textColor="@color/color_f49c41"
                    android:textSize="@dimen/sp17"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"/>
            <!--￥-->
            <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/money"
                    android:textColor="@color/color_f49c41"
                    android:textSize="@dimen/sp12"
                    android:layout_alignLeft="@+id/tv_money_subjectdetail"
                    android:layout_marginLeft="-8dp"
                    android:layout_centerVertical="true"/>
        </RelativeLayout>

        <LinearLayout
                android:background="@drawable/subject_detail_shape"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"

                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp12"
                    android:text="编号 ：XXXXXXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp12"
                    android:text="编号 ：XXXXXXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp12"
                    android:text="编号 ：XXXXXXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="@dimen/dp8"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp12"
                    android:text="编号 ：XXXXXXXX"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:background="@drawable/subject_detail_shape"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:orientation="vertical"

                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:text="@string/teacher"
                    android:textSize="@dimen/sp14"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_height="1px"
                    android:background="@color/color_999999"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_below="@+id/circle"/>
            <!--头像-->
            <RelativeLayout
                    android:layout_marginBottom="@dimen/dp5"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:background="@color/color_ffffff">
                <com.example.tu4.view.CircleImageView
                        android:id="@+id/person_image"
                        android:layout_width="@dimen/dp57"
                        android:layout_height="@dimen/dp57"
                        android:layout_marginTop="@dimen/dp5"
                        android:src="@mipmap/headportrait"
                        app:border_width="@dimen/px1"
                        app:border_color="@color/sffffff"
                />
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_toRightOf="@+id/person_image"
                              android:paddingLeft="@dimen/dp15"
                              android:gravity="center"
                              android:orientation="vertical"
                              android:layout_marginTop="@dimen/dp10"
                              android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:text="昵称Cdohng"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/px30"
                            android:layout_gravity="left"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:paddingTop="@dimen/dp10"
                            android:text="手机：18724615164"
                            android:textColor="@color/color_666666"
                            android:textSize="@dimen/px24"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/dp10"
                        android:src="@mipmap/right_arrow_white"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/dp20"/>
            </RelativeLayout>
            <!--线-->
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_999999"
                    android:layout_below="@+id/circle"/>
            <RelativeLayout
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@color/color_ffffff"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/textview_studentnumber_subjectdetail"
                        android:text="共36个学员"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginBottom="@dimen/dp12"
                        android:textSize="@dimen/sp14"
                        android:textColor="@color/color_333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/line_studentnumber"
                        android:layout_toRightOf="@id/textview_studentnumber_subjectdetail"
                        android:layout_marginTop="@dimen/dp12"
                        android:layout_marginBottom="@dimen/dp12"
                        android:layout_marginLeft="@dimen/dp10"
                        android:background="@color/color_d1d1d1"
                        android:layout_width="@dimen/px1"
                        android:layout_height="@dimen/dp18"/>
                <LinearLayout
                        android:id="@+id/linearlayout_studenimage_subjectdetail"
                        android:layout_toRightOf="@id/line_studentnumber"
                        android:layout_marginLeft="@dimen/dp5"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:layout_toLeftOf="@+id/jiantou"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_marginRight="@dimen/dp2"
                        android:layout_height="match_parent">

                </LinearLayout>
                <ImageView
                        android:id="@+id/jiantou"
                        android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/right_arrow_gray_aubjectdetail"
                        android:layout_centerVertical="true"
                        android:layout_height="@dimen/dp25"/>
            </RelativeLayout>
        </LinearLayout>

        <!--课时-->
        <!--<ListView
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp200">
        </ListView>-->
        <!--课时内容-->
        <RelativeLayout
                android:background="@drawable/subject_detail_shape"

                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课时1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:id="@+id/subject"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subject"
                        android:text="(已完成)"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-05-05 14:00"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:layout_alignParentEnd="true"/>
                <TextView
                        android:id="@+id/line_subject"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_999999"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_below="@+id/subject"/>
                <TextView
                        android:id="@+id/textview_cintent"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:text="内容 "
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:layout_below="@+id/line_subject"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX "
                        android:layout_below="@+id/line_subject"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp14"
                        android:layout_toRightOf="@+id/textview_cintent"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:background="@drawable/subject_detail_shape"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_marginBottom="@dimen/dp10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="课时1"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:id="@+id/subject1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/subject1"
                        android:text="(已完成)"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2016-05-05 14:00"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:layout_alignParentEnd="true"/>
                <TextView
                        android:id="@+id/line_subject1"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/color_999999"
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_below="@+id/subject1"/>
                <TextView
                        android:id="@+id/textview_cintent1"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:text="内容 "
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/sp14"
                        android:layout_below="@+id/line_subject1"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_width="wrap_content"
                        android:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX "
                        android:layout_below="@+id/line_subject1"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/sp14"
                        android:layout_toRightOf="@+id/textview_cintent1"
                        android:layout_height="wrap_content"/>

            </RelativeLayout>
        </RelativeLayout>


        <RelativeLayout
                android:background="@drawable/subject_detail_shape"
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="@dimen/dp5"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="match_parent"
                        android:text="121条学生反馈"
                        android:textColor="@color/color_333333"
                        android:textSize="@dimen/sp14"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_width="match_parent"
                        android:background="@color/color_d1d1d1"
                        android:layout_height="@dimen/px1"/>
                <RelativeLayout
                        android:layout_marginTop="@dimen/dp5"
                        android:layout_marginBottom="@dimen/dp5"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp43">
                    <LinearLayout
                            android:id="@+id/linearlayout_studentback_subjectdetail"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_marginRight="@dimen/dp5"
                            android:layout_height="@dimen/dp43">
                    </LinearLayout>
                    <ImageView
                            android:layout_alignParentRight="true"
                            android:id="@+id/image_jiantoufankui"
                            android:layout_width="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="0dp"
                            android:src="@mipmap/right_arrow_gray_aubjectdetail"
                            android:layout_centerVertical="true"
                            android:layout_height="@dimen/dp40"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
                android:layout_marginTop="@dimen/dp10"
                android:layout_width="match_parent"
                android:background="@color/color_ffffff"
                android:layout_height="@dimen/dp50">
            <Button
                    android:background="@drawable/subject_detail_shape"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp49"
                    android:text="@string/choosesubject"
                    android:textColor="@color/color_97c8cd"
                    android:textSize="@dimen/sp19"
                    android:layout_gravity="center"/>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>
