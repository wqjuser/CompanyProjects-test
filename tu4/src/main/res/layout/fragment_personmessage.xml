<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/s97c8cd"
                    android:layout_height="@dimen/dp44">
        <TextView android:layout_width="wrap_content"
                  android:text="@string/personCenter"
                  android:gravity="center"
                  android:textColor="#fff"
                  android:textSize="@dimen/px30"
                  android:layout_height="match_parent"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@mipmap/lookup"
                   android:paddingRight="@dimen/dp10"
                   android:layout_centerVertical="true"
                   android:layout_alignParentEnd="true"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="@dimen/dp92"
                    android:background="@color/s97c8cd">
        <com.example.tu4.view.CircleImageView
                android:id="@+id/person_image"
                android:layout_width="57dp"
                android:layout_height="57dp"
                android:layout_marginTop="@dimen/dp20"
                android:layout_marginLeft="@dimen/dp5"
                android:src="@mipmap/headportrait"
                app:border_width="@dimen/px1"
                app:border_color="@color/sffffff"
        />
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_toRightOf="@+id/person_image"
                      android:paddingLeft="@dimen/dp15"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:paddingTop="@dimen/dp5"
                      android:layout_height="match_parent">
            <TextView android:layout_width="wrap_content"
                      android:text="昵称Cdohng"
                      android:textColor="@color/sffffff"
                      android:textSize="@dimen/px30"
                      android:layout_gravity="left"
                      android:layout_marginTop="@dimen/dp5"
                      android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:paddingTop="@dimen/dp10"
                      android:text="手机：18724615164"
                      android:textColor="@color/sffffff"
                      android:textSize="@dimen/px24"
                      android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp10"
                android:src="@mipmap/right_arrow_white"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp20"/>
    </RelativeLayout>

    <ListView

            android:id="@+id/listview"
            android:divider="@color/listview_diver"
            android:layout_width="match_parent"
            android:dividerHeight="@dimen/px1"
            android:layout_height="wrap_content">
    </ListView>

</LinearLayout>
