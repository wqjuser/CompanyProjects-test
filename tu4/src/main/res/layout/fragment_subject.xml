<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/s97c8cd"
                    android:layout_height="@dimen/dp44">
        <ImageView android:layout_width="wrap_content"
                   android:src="@mipmap/date_subject"
                   android:layout_marginLeft="@dimen/dp10"
                   android:layout_height="match_parent"/>
        <TextView android:layout_width="wrap_content"
                  android:text="@string/subject"
                  android:gravity="center"
                  android:textColor="@color/sffffff"
                  android:textSize="@dimen/px34"
                  android:layout_height="match_parent"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true"/>
        <ImageView
                android:id="@+id/subject_titlt_wait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/wait_subject"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/dp10"
        />
        <ImageView
                android:id="@+id/subject_titlt_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lookup"
                android:layout_marginRight="@dimen/dp15"
                android:layout_alignTop="@+id/subject_titlt_wait"
                android:layout_toStartOf="@+id/subject_titlt_wait"/>

    </RelativeLayout>
    <com.example.tu4.view.ImageCyclePlayView
            android:id="@+id/icpv_subject"
            android:layout_width="match_parent"
            android:layout_height="@dimen/instrument_instrument_viewpagerHeight">
    </com.example.tu4.view.ImageCyclePlayView>
